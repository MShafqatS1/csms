<table>
    <td style="text-align: left;">Currently we have <%= @users.count %> Users</td>
    <td></td>
    <td style="text-align: right;">
        <%= link_to "Add New User", new_user_path, class: "btn btn-primary" %>
    </td>
</table>
<br>
<table class="css-serial">
    <thead>
        <tr>
            <th class="table_th">Sr No</th>
            <th class="table_th">Name</th>
            <th class="table_th">Fathers Name</th>
            <th class="table_th">Mothers Name</th>
            <th class="table_th">Username</th>
            <th class="table_th">Contact Number</th>
            <th class="table_th">Email ID</th>
            <th class="table_th">Users Role</th>
            <th class="table_th">Admin</th>
            <th class="table_th">Action</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td class="table_td"></td>
                <td class="table_td"><%= user.name %></td>
                <td class="table_td"><%= user.fname %></td>
                <td class="table_td"><%= user.mname %></td>
                <td class="table_td"><%= user.nickname %></td>
                <td class="table_td"><%= user.number %></td>
                <td class="table_td"><%= user.email %></td>
                <td class="table_td"><%= user.role %></td>
                <td class="table_td"><%= user.admin %></td>
                <td class="table_td">
                    <%= link_to "Edit", user %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>