<table>
    <td style="text-align: left;">Currently we have <%= @app.count %> Appointments</td>
    <td></td>
    <td style="text-align: right;">
        <%= link_to "Add New Appointment", new_appointment_path, class: "btn btn-primary" %>
    </td>
</table>
<br>
<table class="css-serial">
    <thead>
        <tr>
            <th class="table_th">Sr No</th>
            <th class="table_th">Customer Name</th>
            <th class="table_th">Location</th>
            <th class="table_th">Technician Name</th>
            <th class="table_th">Date of Appointment</th>
            <th class="table_th">Action</th>
        </tr>
    </thead>
    <tbody>
        <% @app.each do |app| %>
            <tr>
                <td class="table_td"></td>
                <td class="table_td"><%= app.user.name %></td>
                <td class="table_td"><%= app.location %></td>
                <td class="table_td"><%= app.techname %></td>
                <td class="table_td"><%= app.appdate.strftime("#{app.appdate.day.ordinalize} %B, %Y") %></td>
                <td class="table_td">
                    <%= link_to "Edit", edit_appointment_path(app), class: "btn btn-info" %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>