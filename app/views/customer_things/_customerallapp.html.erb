<table>
    <td style="text-align: left;">You have <strong><i><%= @cuser.count %></i></strong> Appointments</td>
    <td></td>
    <td style="text-align: right;">
        <%= link_to "Make New Appointment", new_appointment_path, class: "btn btn-primary" %>
    </td>
</table>
<br>
<table class="css-serial">
    <thead>
        <tr>
            <th class="table_th">Sr No</th>
            <th class="table_th">Technician Name</th>
            <th class="table_th">Location</th>
            <th class="table_th">Customer Name</th>
            <th class="table_th">Appointment Date</th>
            <th class="table_th">Action</th>
    </thead>
    <tbody>
        <% @cuser.each do |cuser| %>
            <tr>
                <td class="table_td"></td>
                <td class="table_td">
                    <%= cuser.techname %>
                </td>
                <td class="table_td">
                    <%= cuser.location %>
                </td>
                <td class="table_td">
                    <%= cuser.user.name %>
                </td>
                <td class="table_td">
                    <%= cuser.appdate.strftime("#{cuser.appdate.day.ordinalize} %B, %Y") %>
                </td>
                <td class="table_td">
                    <%= link_to "Edit", edit_appointment_path(cuser), class: "btn btn-info" %>
                </td>
            </tr>
            <% end %>
    </tbody>
</table>