<table>
    <td style="text-align: left;">Currently you have <strong><i><%= @customerpastapp.count %></i></strong> Upcoming Appointments</td>
    <td></td>
</table>
<br>
<table class="css-serial">
    <thead>
        <tr>
            <th class="table_th">Sr No</th>
            <th class="table_th">Technician Name</th>
            <th class="table_th">Location</th>
            <th class="table_th">Customer Name</th>
            <th class="table_th">Appointment Date</th>
            <th class="table_th">Action</th>
    </thead>
    <tbody>
        <% @customerpastapp.each do |cpa| %>
            <tr>
                <td class="table_td"></td>
                <td class="table_td"><%= cpa.techname %></td>
                <td class="table_td"><%= cpa.location %></td>
                <td class="table_td"><%= cpa.user.name %></td>
                <td class="table_td"><%= cpa.appdate.strftime("#{cpa.appdate.day.ordinalize} %B, %Y") %></td>
                <td class="table_td">
                    <%= link_to "Edit", edit_appointment_path(cpa), class: "btn btn-info" %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>