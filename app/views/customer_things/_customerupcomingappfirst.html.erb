<h3>Your Upcoming Appointment</h3>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th class="table_th">Technician Name</th>
            <th class="table_th">Location</th>
            <th class="table_th">Customer Name</th>
            <th class="table_th">Appointment Date</th>
    </thead>
    <tbody>
        <tr>
            <td class="table_td"><%= @customerupcomingappfirst.techname %></td>
            <td class="table_td"><%= @customerupcomingappfirst.location %></td>
            <td class="table_td"><%= @customerupcomingappfirst.user.name %></td>
            <td class="table_td"><%= @customerupcomingappfirst.appdate.strftime("#{@customerupcomingappfirst.appdate.day.ordinalize} %B, %Y") %></td>
        </tr>
    </tbody>
</table>