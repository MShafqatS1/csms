<table>
    <td style="text-align: left;">Currently you have <strong><i><%= @customerupcomingapp.count %></i></strong> Upcoming Appointments</td>
    <td></td>
</table>
<br>
<table class="css-serial">
    <thead>
        <tr>
            <th class="table_th">Sr No</th>
            <th class="table_th">Technician Name</th>
            <th class="table_th">Location</th>
            <th class="table_th">Customer Name</th>
            <th class="table_th">Appointment Date</th>
            <th class="table_th">Action</th>
        </tr>
    </thead>
    <tbody>
        <% @customerupcomingapp.each do |cua| %>
            <tr>
                <td class="table_td"></td>
                <td class="table_td"><%= cua.techname %></td>
                <td class="table_td"><%= cua.location %></td>
                <td class="table_td"><%= cua.user.name %></td>
                <td class="table_td"><%= cua.appdate.strftime("#{cua.appdate.day.ordinalize} %B, %Y") %></td>
                <td class="table_td">
                    <%= link_to "Edit", edit_appointment_path(cua), class: "btn btn-info" %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>